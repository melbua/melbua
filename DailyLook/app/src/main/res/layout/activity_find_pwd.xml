<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPwdActivity">

    <TextView
        android:id="@+id/findpwd_dailylook_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="델룩"
        style="@style/DailylookTitleStyle"
        android:layout_marginTop="80dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpwd_dailylook_title_tv"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/findpwd_findpwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            style="@style/NormalTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/findpwd_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            style="@style/NormalTextStyle"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/findpwd_findpwd_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/findpwd_id_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/inputid"
            android:inputType="textPersonName"
            style="@style/EditTextTextStyle"
            app:layout_constraintTop_toBottomOf="@id/findpwd_id_tv"
            app:layout_constraintStart_toStartOf="parent" />




        <Button
            android:id="@+id/findpwd_findpwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PassWord 찾기"
            style="@style/ButtonStyle"
            android:background="@color/black"
            android:layout_marginTop="80dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/findpwd_id_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>